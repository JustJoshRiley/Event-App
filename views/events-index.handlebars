<div class="row mt-9 justify-content-center">
    <div class="col-sm-6">
        <div class="p-6 fs-1 shadow-lg bg-body rounded text-center">
            <h1>Events</h1>
        </div>
        <div class="mt-6">
        {{#each events}}
            <div class="card mt-3">
                <img class="card-img-top" src="{{this.imgUrl}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="">{{this.title}}</h5>
                    <p class="card-text">{{this.desc}}</p>
                </div>
                    <div class="card-footer text-right">
                        {{!-- <a href="/events/{{this.id}}/rsvps/new" class="btn btn-primary btn-info">RSVP</a> --}}
                        <a href="/events/{{this.id}}" class="btn btn-primary">View</a>
                    </div>
            </div>
        {{/each}}
        </div>
    </div>
</div>